<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_gray"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/thoigiandathang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5/11/2002      12:00:00"
        android:textColor="#2E2828"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tenkhachhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/thoigiandathang"
        android:text="Dương Ngọc Hải"
        android:textColor="#2E2828"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tongtien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tenkhachhang"
        android:text="4.999.000đ"
        android:textColor="#2E2828"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/trangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Đang chờ xử lý"
        android:textColor="#2E2828"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/thoigiandathang"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        />

</androidx.constraintlayout.widget.ConstraintLayout>