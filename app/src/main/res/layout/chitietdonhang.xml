<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết đơn hàng"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"


        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Tên khách hàng: "
            android:textSize="22dp"
            android:textColor="#606060"
            android:textStyle="italic"

            />
        <TextView
            android:id="@+id/tv_tenkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Dương Ngọc Hải"
            android:textSize="22dp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Địa chỉ: "
            android:textSize="22dp"
            android:textColor="#606060"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/tv_diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TP HCM"
            android:textSize="22dp"
            android:textColor="#000000"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_dssp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:tooltipText="Danh sách sản phẩm" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Tổng tiền: "
            android:textSize="22dp"
            android:textColor="#606060"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/tv_tongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="100.000.000đ"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Trạng thái: "
            android:textSize="22dp"
            android:textColor="#606060"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/tv_trangthai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Đang xử lý"
            android:textSize="22dp"
            android:textColor="#000000"
            android:visibility="gone"
            />
        <Spinner
            android:id="@+id/spinnerTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_edit"
            android:layout_marginTop="30dp"

            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#4C4C4C"
            android:backgroundTint="#AFACAC"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_capnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Cập nhập"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#4C4C4C"
            android:backgroundTint="#AFACAC"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            />
    </LinearLayout>




</LinearLayout>
