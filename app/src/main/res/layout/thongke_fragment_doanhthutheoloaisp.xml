<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biểu đồ biểu diễn doanh thu theo loại sản phẩm"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"


        />
    <TextView
        android:id="@+id/tv_dienthoai_doanhthu"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu từ điện thoại: "
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/tv_laptop_doanhthu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu từ laptop: "
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/img_switch_chart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_toright"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>